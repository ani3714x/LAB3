#include <stdio.h>

int main() {
   int n,i,s1=0,s2=0;
   printf("enter the value of n :");
   scanf("%d",&n);
   for(i=1;i<=n;i++)
   {
       if(i%2 ==1)
       {
           s1 += i;
       }
       else
       {
           s2 += i;
       }
   }
   printf("The sum of odd nos between 1 to %d is : %d \n",n,s1);
    printf("The sum of even nos between 1 to %d is : %d",n,s2);
   
    return 0;
}
